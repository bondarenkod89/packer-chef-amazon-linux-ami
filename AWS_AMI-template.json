{
    "variables": {
        "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
        "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
        "region":         "eu-central-1"
    },
    "builders": [
        {
          "type": "amazon-ebs",
          "access_key": "{{user `aws_access_key`}}",
          "secret_key": "{{user `aws_secret_key`}}",
          "region": "{{user `region`}}",
          "instance_type": "t2.micro",
          "source_ami": "ami-07cda0db070313c52",
          "communicator": "ssh",
          "ssh_pty": true,
          "ssh_username": "ec2-user",
          "ami_name": "packer_chef_AWS {{timestamp}}",
          "source_ami_filter": {
            "filters": {
                "virtualization-type": "hvm",
                "name": "amzn2-ami-hvm-2*",
                "root-device-type": "ebs"
            },
            "owners": ["amazon"],
            "most_recent": true
        },
          "tags": {
            "OS_Version": "CentOS",
            "Release": "7",
            "Base_AMI_Name": "{{ .SourceAMIName }}",
            "Extra": "{{ .SourceAMITags.TagName }}"
          }
        }
    ],
    "provisioners": [
        {
          "type": "shell",
          "inline":["sudo yum update -y"]
        },
        {
          "type": "chef-solo",
          "cookbook_paths": ["cookbook"],
          "run_list": ["recipe[wp-cookbook]"],
          "prevent_sudo": false
        },
        {
          "type": "inspec",
          "profile": "cookbook/wp-cookbook/test/integration/default/default_test.rb"
        }
    ]
}